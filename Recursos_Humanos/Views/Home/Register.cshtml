@{
    ViewData["Title"]= "Registro";
}
<link rel="stylesheet" href="~/css/estilos.css">
<section class="h-100 gradient-form">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                    style="width: 185px;" alt="logo">
                  <h4 class="mt-1 mb-5 pb-1">Area Recursos Humanos</h4>
                </div>

                <form>
                  <p>Registro</p>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example11">Nombres y Apellidos</label>
                    <input type="email" id="form2Example11" class="form-control"
                      placeholder="" />
                  </div>
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example11">Nombre usuario</label>
                    <input type="email" id="form2Example11" class="form-control"
                      placeholder="" />
                  </div>
                  <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example11">Cargo</label>
                    <select name="cargo" id="cargo">
                        <option value="Administrativo">Administrativo</option>
                        <option value="Empleado">Empleado</option>
                        <option value="Recursos">Recursos Humanos</option>
                    </select>
                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example22">Contraseña</label>
                    <input type="password" id="form2Example22" class="form-control" />
                    
                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form2Example22">Confirme la Contraseña:</label>
                    <input type="password" id="form2Example22" class="form-control" />
                    
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <button class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" type="button">Registrar</button>
                  </div>

                </form>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">Lo justo para tu compañia.</h4>
                <p class="small mb-0">Bienvenido al Software de Recursos Humanos de última generación! Nuestra herramienta está diseñada para simplificar la gestión de personal y optimizar tus procesos de recursos humanos. Con nuestra plataforma, puedes llevar un registro eficiente de los datos de tus empleados, administrar nóminas, gestionar vacaciones y permisos.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>