<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RH.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="fixed top-0 left-0 w-full z-50 bg-white border-b backdrop-blur-lg bg-opacity-80 bg-gradient-to-r from-gray-950 to-blue-500">
            <div class="mx-auto max-w-7xl px-6 sm:px-6 lg:px-8 ">
                <div class="relative flex h-16 justify-between">
                    <div class="flex flex-1 items-stretch justify-start">
                        <a class="flex flex-shrink-0 items-center" href="#">
                            <img class="block h-12 w-auto" src="https://tecnosoluciones.com/wp-content/uploads/2023/03/tecnologia-gestion-recursos-humanos.png" asp-area="" asp-controller="Home" asp-action="Index">
                        </a>
                    </div>
                    <div class="flex-shrink-0 flex px-2 py-3 items-center space-x-8">
                        <a class="text-gray-800 bg-indigo-100 hover:bg-indigo-200 inline-flex items-center justify-center px-3 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm " asp-area="" asp-controller="Home" asp-action="Inicio"
>Ingresar</a>
                        <a class="text-gray-800 bg-indigo-100 hover:bg-indigo-200 inline-flex items-center justify-center px-3 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm "
                            asp-area="" asp-controller="Home" asp-action="Registro">Registrarse
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="mt-16">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
